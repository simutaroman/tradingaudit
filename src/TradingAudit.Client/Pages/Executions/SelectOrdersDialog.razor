@using TradingAudit.Shared.DTOs.Executions
@using MudBlazor
@inject ExecutionClient ExecutionClient

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Прив'язка ордерів для @Symbol</MudText>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <div class="d-flex justify-center pa-4">
                <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
            </div>
        }
        else if (!_orders.Any())
        {
            <MudAlert Severity="Severity.Info">Не знайдено вільних ордерів для @Symbol</MudAlert>
        }
        else
        {
            <MudList T="Guid" SelectionMode="SelectionMode.MultiSelection" @bind-SelectedValues="_selectedOrderIds">
                @foreach (var order in _orders)
                {
                    <MudListItem Value="@order.Id">
                        <div class="d-flex justify-space-between align-center w-100">
                            <div>
                                <MudChip T="string" Color="@(order.Side.ToUpper() == "BUY" ? Color.Success : Color.Error)"
                                         Size="Size.Small" Variant="Variant.Text">@order.Side</MudChip>
                                <b>@order.ExecutedAmount</b> @@ @order.Price.ToString("N4")
                            </div>
                            <MudText Typo="Typo.caption" Class="ml-4">@order.OrderTime.ToString("dd.MM HH:mm")</MudText>
                        </div>
                    </MudListItem>
                }
            </MudList>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Скасувати</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"
                   OnClick="Submit" Disabled="@(!_selectedOrderIds.Any())">
            Прив'язати (@_selectedOrderIds.Count())
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string Symbol { get; set; } = "";

    private List<ExchangeOrderResponseDto> _orders = new();

    // Змінюємо тип на IReadOnlyCollection, щоб відповідати вимогам MudList
    private IReadOnlyCollection<Guid> _selectedOrderIds = new List<Guid>();

    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _orders = await ExecutionClient.GetUnlinkedOrdersAsync(Symbol);
        }
        catch (Exception ex)
        {
            // Додай логування або Snackbar, якщо сервіс впаде
            Console.WriteLine($"Error fetching orders: {ex.Message}");
        }
        finally
        {
            _loading = false;
        }
    }

    private void Submit()
    {
        // Перетворюємо назад у List для повернення в батьківський компонент
        MudDialog.Close(DialogResult.Ok(_selectedOrderIds.ToList()));
    }

    private void Cancel() => MudDialog.Cancel();
}